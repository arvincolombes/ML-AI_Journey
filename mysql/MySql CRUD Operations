
  MYSQL CRUD OPERATIONS
############################################################  CREATE THE DATABASE ##########################################


mysql> create database ML;
Query OK, 1 row affected (0.401 sec)

mysql> show databases;
+--------------------+
| Database           |
+--------------------+
| arvin              |
| information_schema |
| ml                 |
| mysql              |
| performance_schema |
| sakila             |
| sys                |
| world              |
+--------------------+
8 rows in set (0.009 sec)

mysql> use ML;
Database changed

mysql> SELECT DATABASE();
+------------+
| DATABASE() |
+------------+
| ml         |
+------------+
1 row in set (0.005 sec)

#####################################################3 CREATE TABLE AND INSET DATA INTO TO A DATABASE TABLE #################

CREATE TABLE EMPLOYEE(
 empid INTEGER PRIMARY KEY,
 name TEXT NOT NULL,
 dept TEXT NOT NULL
 );
mysql> INSERT INTO EMPLOYEE VALUES (0001,'Clark','Sales);
    '> INSERT INTO EMPLOYEE VALUES (0002,'Deve','Accounting')
    '> INSERT INTO EMPLOYEE VALUES (0001,'Ava','Sales');
mysql> select * from employee;
+-------+-------+------------+
| empid | name  | dept       |
+-------+-------+------------+
|     1 | Clark | Sales      |
|     2 | Deve  | Accounting |
|     3 | Ava   | Sales      |
+-------+-------+------------+
3 rows in set (0.005 sec)

mysql> select * from employee WHERE dept='Sales';
+-------+-------+-------+
| empid | name  | dept  |
+-------+-------+-------+
|     1 | Clark | Sales |
|     3 | Ava   | Sales |
+-------+-------+-------+
2 rows in set (0.005 sec)

mysql> select empid from EMPLOYEE;
+-------+
| empid |
+-------+
|     1 |
|     2 |
|     3 |
+-------+
3 rows in set (0.007 sec)
############################################MODIFIES EXISTING RECORDS IN A DATABASE TABLE####################################
mysql> select * from EMPLOYEE;
+-------+-------+------------+
| empid | name  | dept       |
+-------+-------+------------+
|     1 | Clark | Sales      |
|     2 | Deve  | Accounting |
|     3 | Ava   | Sales      |
|     4 | Arvin | HR         |
+-------+-------+------------+
mysql> UPDATE EMPLOYEE SET name='manoj' WHERE name='Arvin';
Query OK, 1 row affected (0.334 sec)
Rows matched: 1  Changed: 1  Warnings: 0

mysql> select * from EMPLOYEE;
+-------+-------+------------+
| empid | name  | dept       |
+-------+-------+------------+
|     1 | Clark | Sales      |
|     2 | Deve  | Accounting |
|     3 | Ava   | Sales      |
|     4 | manoj | HR         |
+-------+-------+------------+
########################################################REMOVES RECORDS (ROWS) FROM A DATABASE TABLE########################
mysql> select * from EMPLOYEE;
+-------+-------+------------+
| empid | name  | dept       |
+-------+-------+------------+
|     1 | Clark | Sales      |
|     2 | Deve  | Accounting |
|     3 | Ava   | Sales      |
|     4 | manoj | HR         |
+-------+-------+------------+
4 rows in set (0.006 sec)

mysql> delete from EMPLOYEE where name='manoj';
Query OK, 1 row affected (0.434 sec)

mysql> select * from EMPLOYEE;
+-------+-------+------------+
| empid | name  | dept       |
+-------+-------+------------+
|     1 | Clark | Sales      |
|     2 | Deve  | Accounting |
|     3 | Ava   | Sales      |
+-------+-------+------------+
3 rows in set (0.005 sec)
